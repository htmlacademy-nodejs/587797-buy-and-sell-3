extends layout

block content
  section.error
    h1.error__title 500
    h2.error__subtitle Ошибка cервера
    ul.error__list
      li.error__item
        a(href='/login') Вход и регистрация
      li.error__item
        a(href='/offers/add') Новая публикация
      li.error__item
